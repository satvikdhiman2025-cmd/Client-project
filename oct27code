class Diagnosis:                                                                                # Initializes a Diagnosis class 
  def __innit__(self, name, tests, differentialDiagnoses, treatment, prognosis):
    self.name = name
    self.tests = tests
    self.differentialDiagnoses = differentialDiagnoses
    self.treatment = treatment
    self.prognosis = prognosis

  def __str__(self):                                                      # Displays diagnosis name, tests, differential, treatment, and prognosis
   return f"""
Diagnosis: {self.name}
Tests: {self.tests)
Differential Diagnoses: {differentialDiagnoses}
Treatment: {self.treatment}
Prognosis: {self.prognosis}
"""

