def userInput():
  try:
    status = True
    while status == True:                                                                                   #Initializing a loop that continues to ask users if they wanna do a new search
      search = input("What diagnosis are you interested in researching?: ")                                 # Try and except in the instance we cant locate their diagnosis
  except ValueError:
    print("Invalid Input. Please enter the name of an illness to search for.")
  except:
    print("Couldn't locate specified diagnosis.")
  finally:
    try:
      runAgainPrompt = ("Do you want to search for another diagnosis or see all diagnoses? (y / n / all): ")              #asking if they want to see all/search for a new diag, or stop running
      if runAgainPrompt == "y" or runAgainPrompt == "yes" or runAgainPrompt == "Yes" or runAgainPrompt == "yes".upper() or runAgainPrompt =='Y':
        status = True
      elif runAgainPrompt == "all" or runAgainPrompt == 'a' or runAgainPrompt == "All" or runAgainPrompt == 'A' or runAgainPrompt == "all".upper():
        print()
        #maybe make a new function
      elif runAgainPrompt == "n" or runAgainPrompt == 'N' or runAgainPrompt == "no".upper() or runAgainPrompt == "No":
        print("Exiting Program.")
        status = False
    except ValueError:
      print("Please enter  yes / no / all")
